{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/FuReSH/Werkzeugregal/schemas/blackbox.schema.json",
    "title": "Blackbox",
    "description": "A schema to rudimentary describe a digital tool as a blackbox having input, processing steps and output",
    "type": "object",
    "properties": {
      "name": {
          "description": "The unique 'speaking' id of the blackbox that is related to a tool. Always lowercase and hyphenated and must match filename.",
          "type": "string",
          "pattern": "^[a-z]{1}[a-z-]+[a-z](_blackbox)$"
      },
      "input": {
        "type": "array",
        "items": {
            "type": "object",
            "properties":  {
                "tool": { "$ref": "/schemas/tool.schema.json#/$defs/name" },
                "category": { "$ref": "/schemas/category-list" }
            }
        }
      },
      "processing": {
        "type": "array",
        "items": {
            "type": "object",
            "properties":  {
                "tool": { "$ref": "/schemas/tool.schema.json#/$defs/name" },
                "category": { "$ref": "/schemas/category-list" }
            }
        }
      },
      "output": {
        "type": "array",
        "items": {
            "type": "object",
            "properties":  {
                "tool": { "$ref": "/schemas/tool.schema.json#/$defs/name" },
                "category": { "$ref": "/schemas/category-list" }
            }
        }
      }
    },
  "additionalProperties": false,
  "required": [ "name", "input", "processing", "output" ]
  }