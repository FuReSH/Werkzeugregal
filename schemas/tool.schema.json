{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/FuReSH/Werkzeugregal/schemas/tool.schema.json",
    "title": "Tool",
    "description": "A digital tool used for research in the humanities",
    "type": "object",
    "properties": {
        "name": {
            "description": "The title of the digital tool",
            "type": "string"
        },
        "acronym": {
            "description": "",
            "type": ["string"]
        },
        "image": {
            "description": "URL's of the logo in Wikimedia Commons",
            "type": "object",
            "patternProperties": {
                "(svg|png|jpg|jpeg|tiff)": {
                    "type": "string",
                    "pattern": "^(https://upload.wikimedia.org/wikipedia/commons/).+\\.(svg|png|jpg|jpeg|tiff)$",
                    "format": "uri"
                }                
            },
            "additionalProperties": false           
        },
        "wikidataId": {
            "description": "Unique Wikidata identifier. Starts always with prefix Q",
            "type": "string",
            "pattern": "^Q[0-9]+"
        },
        "category": {
            "description": "Our tool set kit",
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "software", 
                    "format", 
                    "programming language", 
                    "concept",
                    "method",
                    "interface",
                    "library"
                ]
            }             
        }        
    },
    "required": [ "name", "wikidataId", "category" ]
}