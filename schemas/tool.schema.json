{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/FuReSH/Werkzeugregal/schemas/tool.schema.json",
    "title": "Tool",
    "description": "A schema to rudimentary describe a digital tool used for research in the humanities",
    "type": "object",
    "properties": {
        "name": {
            "description": "The unique 'speaking' id of the tool. Always lowercase and hyphenated and must match filename.",
            "type": "string",
            "pattern": "^[a-z]{1}[a-z-]+[a-z](_tool)$"
        },
        "image": {
            "description": "URL's of the logo in Wikimedia Commons",
            "type": "object",
            "patternProperties": {
                "(svg|png|jpg|jpeg|tiff)": {
                    "type": "string",
                    "pattern": "^(https://upload.wikimedia.org/wikipedia/commons/).+\\.(svg|png|jpg|jpeg|tiff)$",
                    "format": "uri"
                }                
            },
            "additionalProperties": false           
        },
        "wikidataId": {
            "description": "Unique Wikidata identifier. Starts always with prefix Q",
            "type": "string",
            "pattern": "^Q[0-9]+"
        },
        "category": { "$ref": "/schemas/category-list" }       
    },
    "additionalProperties": false,
    "required": [ "name", "wikidataId", "category" ],

    "$defs": {
        "category-list": {
          "$id": "/schemas/category-list",
          "$schema": "https://json-schema.org/draft/2020-12/schema",
          "$comment": "These categories are our tool boxes. Can be used of all other schemas.",   
          "description": "A subschema that holds categories for tool classification. Expects Wikidata identifiers.",
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "Q95001953", 
                    "Q2085518", 
                    "Q9143", 
                    "concept",
                    "Q1438073",
                    "Q47146",
                    "Q188860"
                ]
            }
        }
    }
}